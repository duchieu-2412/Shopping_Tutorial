@model IEnumerable<ProductModel>
<div class="col-sm-3">
	@Html.Partial("_SidebarPartial")
</div>

<style>
	.product-image-wrapper{
		height: 450px;
	}
</style>
<div class="col-sm-9 padding-right">
	<div class="features_items">
		<!--features_items-->
		<h2 class="title text-center">Sản phẩm bán chạy</h2>
		@foreach (var item in Model)
		{
			
			<div class="col-sm-4">
				<div class="product-image-wrapper">
				
				<div class="single-products">

					<div class="productinfo text-center">
							<a asp-action="Details" asp-controller="Product" asp-route-id="@item.Id">

						<img src="~/media/products/@item.Image" alt="@item.Name" width="100%" />
						<h2>$@item.Price</h2>
						<p>@item.Name</p>
								
								<p>Thương hiệu: @item.Brand.Name</p>
							</a>
							<a class="btn btn-default add-to-cart" asp-action="Add" asp-controller="Cart" asp-route-Id="@item.Id"><i class="fa fa-shopping-cart"></i>Thêm vào giỏ</a>
					</div>
				
				</div>
				
				
			</div>
		</div>
		}
		
		
		
		
		

	</div><!--features_items-->

	

	

</div>